{
  "name": "screen-time-tracker",
  "version": "1.0.0",
  "description": "A desktop app to track screen time usage",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "start": "npm run dev:electron",
    "dev": "vite",
    "dev:electron": "node scripts/dev.js",
    "dev:simple": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "build": "vite build",
    "build:electron": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "clean": "rimraf dist dist-electron node_modules package-lock.json",
    "test:powershell": "node test-powershell.js"
  },
  "keywords": ["electron", "react", "tailwind", "screen-time"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.yourname.screentimetracker",
    "productName": "Screen Time Tracker",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
